<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title">
                        <b>Edit</b>
                        <legend>About Us</legend>
                    </h1>
                </div>
                <!-- /.card-header -->
                <form role="form" id="quickForm" action="/aboutus/edit/{{id}}" method="POST">
                    <div class="card-body">
                        {{#if messages.msg_info}}
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h5><i class="icon fas fa-check"></i> Success!</h5>
                            {{messages.msg_info}}
                        </div>
                        {{/if}}
                        {{#if messages.msg_error}}
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                            {{messages.msg_error}}
                        </div>
                        {{/if}}
						<div class="form-group">
                            <label for="visiTitle">Visi Title</label>
                            <input type="text" name="visiTitle" class="form-control" id="visiTitle" placeholder="Visi Title"
                                value="{{results.visiTitle}}" required>
                        </div>
						<div class="form-group">
                            <label for="visiSubtitle">Visi Description</label>
                            <textarea class="textarea" name="visiSubtitle" id="visiSubtitle" required>{{results.visiSubtitle}}</textarea>
                        </div>
						<div class="form-group">
                            <label for="misiTitle">Title Misi</label>
                            <input type="text" name="misiTitle" class="form-control" id="misiTitle" placeholder="Misi Title"
                                value="{{results.misiTitle}}" required>
                        </div>
						<div class="form-group">
                            <label for="misiSubtitle">Misi Description</label>
                            <textarea class="textarea" name="misiSubtitle" id="misiSubtitle" required>{{results.misiSubtitle}}</textarea>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <input type="hidden" name="_method" value="PUT">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a class="btn btn-secondary" href="/aboutus">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->