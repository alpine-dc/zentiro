								<th style="width: 10%">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each results}}
                            <tr>
                                <td>{{ name }}</td>
                                <td>{{ name_person }}</td>
                                <td>{{ phone }}</td>
								<td>{{ address }}</td>
								<td>{{ province }}</td>
								<td>{{ city }}</td>
								<td>{{ district }}</td>
								<td>{{ postcode }}</td>
								<td>{{ type }}</td>
								<td>{{ status }}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
