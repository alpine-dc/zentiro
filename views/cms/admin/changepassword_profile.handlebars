<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h1 class="card-title">
                        <b>Change Password</b>
                        <legend>Profile</legend>
                    </h1>
                </div>
                <!-- /.card-header -->
                <form role="form" id="quickForm" action="/changepassword_profile/{{id}}" method="POST">
                    <div class="card-body">
                        {{#if messages.msg_info}}
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h5><i class="icon fas fa-check"></i> Success!</h5>
                            {{messages.msg_info}}
                        </div>
                        {{/if}}
                        {{#if messages.msg_error}}
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h5><i class="icon fas fa-ban"></i> Alert!</h5>
                            {{messages.msg_error}}
                        </div>
                        {{/if}}
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input name="username" class="form-control" id="username" placeholder="username"
                                value="{{results.username}}" required readonly>
                        </div>
                        <div class="form-group">
                            <label for="new_password">New Password</label>
                            <input type="password" name="new_password" class="form-control" id="new_password"
                                placeholder="New Password" value="{{results.new_password}}" required>
                        </div>
                        <div class="form-group">
                            <label for="confirm_password">Confirm Password</label>
                            <input type="password" name="confirm_password" class="form-control" id="confirm_password"
                                placeholder="Confirm Password" value="{{results.confirm_password}}" required>
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <input type="hidden" name="_method" value="PUT">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a class="btn btn-secondary" href="/profile">
                            Back
                        </a>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->