<div class="container-fluid">
  <div style="text-align: right; padding-bottom: 20px;">
    <a class="btn btn-success" href="/category/create">
      <i class="fas fa-plus"></i>
      Add New Category
    </a>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <legend>Category</legend>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          {{#if messages.msg_info}}
            <div class="alert alert-success alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <h5><i class="icon fas fa-check"></i> Success!</h5>
              {{messages.msg_info}}
            </div>
          {{/if}}
          {{#if messages.msg_error}}
            <div class="alert alert-danger alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <h5><i class="icon fas fa-ban"></i> Alert!</h5>
              {{messages.msg_error}}
            </div>
          {{/if}}
          <table id="table_general1" class="table table-bordered table-striped">
            <thead>
              <tr>
                <th style="width: 15%">Name</th>
                <th style="width: 15%">Permalink</th>
                <th style="width: 30%">Image</th>
                <th style="width: 10%">Status</th>
                <th style="width: 40%">Action</th>
              </tr>
            </thead>
            <tbody>
              {{#each results}}
                <tr>
                  <td>{{name}}</td>
                  <td>{{permalink}}</td>
                  <td>
                    <img src="{{image}}" style="max-width:200px; max-height:200px;">
                  </td>
                  <td>
                    {{#if status}}
                      <a class="btn btn-success btn-sm">
                        <i class="bi bi-shield-check"></i>
                        Active
                      </a>
                    {{else}}
                      <a class="btn btn-danger btn-sm">
                        <i class="bi bi-shield-x"></i>
                        Inactive
                      </a>
                    {{/if}}
                  </td>
                  <td>
                    <a class="btn btn-info btn-sm" href="/category/edit/{{id}}">
                      <i class="fas fa-pencil-alt">
                      </i>
                      Edit
                    </a>
                    <a class="btn btn-primary btn-sm" href="/category/detail/{{id}}">
                      <i class="fas fa-info">
                      </i>
                      Detail
                    </a>
                    <a href="javascript:void(0);" class="btn btn-sm btn-danger delete" data-id="{{id}}">
                      <i class="fas fa-trash">
                      </i>
                      Delete
                    </a>
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</div>
<!-- /.container-fluid -->

<!-- Modal Delete Produk-->
<form id="add-row-form" action="/category/delete/" method="post">
  <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="myModalLabel">Delete Category</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
          <strong>Are you sure you want to delete this data?</strong>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="_method" value="DELETE" />
          <input type="hidden" name="category_id" class="form-control category_id" required />
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-success">Delete</button>
        </div>
      </div>
    </div>
  </div>
</form>

<script>
  $(document).ready(function () { $('#table_general1').on('click', '.delete', function () { var category_id = $(this).data('id'); $('#DeleteModal').modal('show'); $('.category_id').val(category_id); }); });
</script>

<style>
  #table_general1 { width: 100% !important; }
</style>